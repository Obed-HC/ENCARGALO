<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/activity_margin"
    tools:context=".tendero.Inicio_sesion.ui.Mis_productos.mip_frgdetalleproducto">

    <ImageView
        android:id="@+id/mip_imgproducto"
        android:layout_width="@dimen/btn_type02_width"
        android:layout_height="@dimen/btn_type02_width"
        android:layout_gravity="center"
        android:src="@drawable/imagen_perfil1"
        tools:ignore="ContentDescription" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mit_varstrdetalleproducto1"
        android:layout_marginTop="@dimen/fab_margin"
        style="@style/Subtitle_2"
        android:layout_gravity="center"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/textinput">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/mip_dpedtcodigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/textinput"
            android:padding="@dimen/input_padding"
            android:hint="@string/mit_varstrdetalleproducto2"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/textinput">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/mip_dpedtcorreo"
            android:layout_width="320dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            style="@style/textinput"
            android:padding="@dimen/input_padding"
            android:hint="@string/mit_varstrdetalleproducto3"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/textinput">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/mip_dpedtdescripcion"
            android:layout_width="320dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            style="@style/textinput"
            android:padding="@dimen/input_padding"
            android:hint="@string/mit_varstrdetalleproducto4"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!--
    <Spinner
        android:id="@+id/mip_dpedtcategoria"
        android:layout_width="320dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        style="@style/textinput"
        android:padding="@dimen/input_padding"
        android:hint="@string/mit_varstrdetalleproducto5"/>
    -->

    <TextView
        style="@style/Body_3"
        android:layout_width="320dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/mit_varstrdetalleproducto6" />

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_txt_simboloprecio"
            style="@style/textinput"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/mip_dpedtcostoproducto"
            style="@style/textinput"
            android:padding="@dimen/input_padding"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:inputType="numberDecimal"/>
    </LinearLayout>

    <TextView
        style="@style/Body_3"
        android:layout_width="320dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/mit_varstrdetalleproducto7"/>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_txt_simboloprecio"
            style="@style/textinput"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/mip_dpedtprecioventa"
            style="@style/textinput"
            android:padding="@dimen/input_padding"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:inputType="numberDecimal"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <Button
            android:id="@+id/mip_dpbtneliminar"
            android:background="@drawable/containedbtn_green"
            android:layout_width="135dp"
            android:layout_height="44dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="76dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="150dp"
            android:text="@string/mit_varstrdetalleproducto9"
            style="@style/Contained_button_green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/mip_dpbtnmodificar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/mip_dpbtnmodificar"
            android:background="@drawable/containedbtn_blue"
            android:textColor="@color/whitePrimary"
            android:layout_width="135dp"
            android:layout_height="44dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="76dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="150dp"
            android:text="@string/mit_varstrdetalleproducto8"
            style="@style/Contained_button_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mip_dpbtneliminar"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>